[run]
# Only include core files that are directly used for the end goal
include = 
    src/core/*
    src/storage/*
    src/metrics/*

# Exclude test files and other non-core files
omit = 
    tests/*
    */tests/*
    */__pycache__/*
    */test_*
    run
    requirements.txt
    README.md
    .gitignore
    .coveragerc

[report]
# Show missing lines
show_missing = True

# Skip covered files in report
skip_covered = False

# Precision for percentage display
precision = 1

# Exclude lines from coverage
exclude_lines =
    # Have to re-enable the standard pragma
    pragma: no cover

    # Don't complain about missing debug-only code:
    def __repr__
    if self\.debug

    # Don't complain if tests don't hit defensive assertion code:
    raise AssertionError
    raise NotImplementedError

    # Don't complain if non-runnable code isn't run:
    if 0:
    if __name__ == .__main__.:

    # Don't complain about abstract methods, they aren't run:
    @(abc\.)?abstractmethod
